package capitulo03.meuPrograma;

import capitulo03.geometria.Retangulo;
import java.util.Scanner;
        
public class Main {
    public static void main(String[] args){
        Scanner input = new Scanner(System.in);
    
        System.out.print("Digite um número para a base: ");
        double base = input.nextDouble();
        
        System.out.print("Digite um número para a altura: ");
        double altura = input.nextDouble();

    
        Retangulo retangulo = new Retangulo(base, altura);
        
        double area = retangulo.calcularArea();
        double perimetro = retangulo.calcularPerimentro();
        
        System.out.println("Área do retângulo: " + area);
        System.out.println("Perímetro do retângulo: " + perimetro);   
    }
}
   